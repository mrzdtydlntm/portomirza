{
    "files.exclude": {
        ".git/": true,
        "node_modules/": false,
        "public/": false
    },
    "search.exclude": {
        "**/.cache": true,
        "**/node_modules": true,
        "**/public": true
    },
    "editor.rulers": [110],
    "editor.tabSize": 4,
    "editor.formatOnSave": true,
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "editor.codeActionsOnSave": { "source.fixAll.eslint": true },
    "eslint.validate": ["react", "html", "javascript"],
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "emmet.triggerExpansionOnTab": true,
    "emmet.includeLanguages": {
        "javascript": "javascriptreact"
    },
    "files.associations": {
        "*.jsx": "javascriptreact",
        "*.scss": "postcss"
    }
}
